{
  "name": "react-audio-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build && turbo run prettier",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run start",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "clean:empty": "node scripts/delete-empty-files.js",
    "clean:empty:dry": "node scripts/delete-empty-files.js --dry-run",
    "pub": "turbo run pub && pnpm changeset version && pnpm changeset publish && node scripts/changelog.js",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/react-audio.git"
  },
  "license": "MIT",
  "author": {
    "name": "MJ Anglin",
    "email": "contact@mjanglin.com",
    "url": "https://mjanglin.com"
  },
  "bugs": {
    "url": "https://github.com/clxrityy/react-audio/issues"
  }
}
