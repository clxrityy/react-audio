{
  "name": "@clxrity/react-audio",
  "version": "2.5.1",
  "description": "A simple audio player for React",
  "main": "./dist/index.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs"
    },
    "./index.css": "./dist/index.css"
  },
  "private": false,
  "files": [
    "dist",
    "package.json",
    "dist/index.css"
  ],
  "ladle": {
    "stories": [
      "src/**/*.stories.@(js|jsx|ts|tsx|mdx)"
    ],
    "staticDirs": [
      "public"
    ]
  },
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "build": "vite build",
    "release": "pnpm clean && pnpm test && pnpm coverage && pnpm lint && changeset version && changeset publish",
    "patch:publish": "pnpm build && pnpm build:ladle && changeset publish",
    "test": "vitest",
    "lint": "eslint --fix && prettier -c --write ./src/*",
    "dev": "ladle serve",
    "build:ladle": "ladle build && node scripts/docs-postbuild.cjs && node scripts/generate-sitemap.cjs",
    "deploy-docs": "gh-pages -d docs",
    "clean": "rm -rf node_modules pnpm-lock.yaml docs dist && pnpm install && pnpm build && pnpm build:ladle",
    "start": "ladle preview",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clxrityy/react-audio.git"
  },
  "keywords": [
    "react",
    "audio",
    "typescript",
    "wav",
    "mp3",
    "ogg",
    "media",
    "player",
    "music",
    "sound",
    "play",
    "pause",
    "stop",
    "volume",
    "seek",
    "progress",
    "time",
    "duration",
    "metadata",
    "loading",
    "error",
    "next",
    "api",
    "waveform",
    "waveform-api",
    "waveform-data",
    "waveform-image"
  ],
  "author": {
    "name": "MJ Anglin",
    "email": "contact@mjanglin.com",
    "url": "https://mjanglin.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clxrityy/react-audio/issues"
  },
  "homepage": "https://clxrityy.github.io/react-audio",
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@codecov/vite-plugin": "^1.9.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@eslint/js": "^9.25.1",
    "@eslint/markdown": "^6.4.0",
    "@ladle/react": "^5.0.2",
    "@octokit/plugin-paginate-rest": "^12.0.0",
    "@octokit/request": "^9.2.3",
    "@tailwindcss/postcss": "^4.1.4",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "baseui": "^15.0.0",
    "clsx": "^2.1.1",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.507.0",
    "pnpm": "^10.10.0",
    "postcss": "^8.5.3",
    "prettier": "3.5.3",
    "styletron-engine-monolithic": "^1.0.0",
    "styletron-react": "^6.1.1",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-sitemap": "^0.7.1",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "engines": {
    "node": ">=23"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@swc/core",
      "core-js",
      "msw"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}